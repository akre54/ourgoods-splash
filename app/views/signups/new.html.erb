<div class="text-block col-lg-5 col-lg-offset-2">

  <h2>Have something to share?</h2>

  <%= form_for(@signup, remote: true, html: { class: 'form-horizontal col-lg-9', role: 'form' }) do |f| %>
    <div class="form-group">
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    </div>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    <div class="form-group">
      <%= f.text_field :have, class: "form-control", placeholder: "I have..." %>
    </div>
    <div class="form-group">
      <%= f.text_field :need, class: "form-control", placeholder: "I need..." %>
    </div>
    <p class="help-block text-center"><small>We won't send you spam. Unsubscribe at any time.</small></p>
    <p class="text-center">
      <%= f.button "SIGN ME UP", type: "submit", class: "btn btn-success btn-lg" %>
    </p>
  <% end %>
</div><!-- //col2 -->
